<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="20dp">

    <EditText
        android:id="@+id/txtCantidad"
        android:layout_marginTop="220dp"
        android:hint="Cantidad a convertir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>

    <Button
        android:id="@+id/btnConvertir"
        android:layout_marginTop="280dp"
        android:text="Convertir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>

    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_marginTop="350dp"
        android:text="Respuesta: ?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TabHost
        android:id="@+id/tbhConversores"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/tbLongitud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblDeLongitud"
                        android:text="DE:"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <Spinner
                        android:id="@+id/spnDeLongitud"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/longitud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>

                    <TextView
                        android:id="@+id/lblALongitud"
                        android:text="A:"
                        android:layout_marginTop="120dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <Spinner
                        android:id="@+id/spnALongitud"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/longitud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tbMonedas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDeMonedas"
                        android:text="DE:"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <Spinner
                        android:id="@+id/spnDeMonedas"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/monedas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>

                    <TextView
                        android:id="@+id/lblAmonedas"
                        android:text="A:"
                        android:layout_marginTop="120dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <Spinner
                        android:id="@+id/spnAMonedas"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/monedas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tbMasa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblDeMasa"
                        android:text="DE:"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <Spinner
                        android:id="@+id/spnDeMasa"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/masa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>

                    <TextView
                        android:id="@+id/lblAMasa"
                        android:text="A:"
                        android:layout_marginTop="120dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <Spinner
                        android:id="@+id/spnAMasa"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/masa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>


</RelativeLayout>